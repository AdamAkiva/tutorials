{
  "name": "node-template-be",
  "version": "0.0.0",
  "description": "",
  "type": "module",
  "main": "./src/main.ts",
  "scripts": {
    "start:dev": "npx nodemon --config ./nodemon.json ./src/main.ts",
    "test": "printf 'Application has no tests\n' && exit 1",
    "lint": "npx tsc --project ./tsconfig.json --noEmit && npx eslint \"src/**/*.ts\"",
    "generate:types": "npx swagger-typescript-api --modular --no-client -o ./src/utils/types -p ./src/api-docs/openapi.yml && mv ./src/utils/types/data-contracts.ts ./src/utils/types/api.ts",
    "generate:openapi": "npx redocly build-docs ./src/api-docs/openapi.yml -o ./src/api-docs/openapi.html",
    "check-global-updates": "npx ncu -g",
    "check-local-updates": "npx ncu",
    "commit-local-updates": "npx ncu -u",
    "check-code-deps": "npx depcheck --ignores=@swc/core,pino-pretty,prettier,support-color,ts-node",
    "check-cir-deps": "npx dpdm --no-tree --transform --exit-code circular:1 \"src/**/*.ts\"",
    "_install-start": "npm install && npm run generate:openapi && npm run start:dev",
    "_test:ci": "printf 'Pipeline does not exist yes' && exit 1",
    "_build": "npx eslint './src/**/*.ts' && npx tsc --build --verbose ./tsconfig.prod.json"
  },
  "dependencies": {
    "compression": "~1.7.4",
    "cors": "~2.8.5",
    "debug": "~4.3.4",
    "express": "~4.19.2",
    "helmet": "~7.1.0",
    "pino-http": "~9.0.0",
    "support-color": "~7.1.0"
  },
  "devDependencies": {
    "@swc/core": "~1.4.14",
    "@redocly/cli": "~1.11.0",
    "@types/compression": "~1.7.5",
    "@types/cors": "~2.8.17",
    "@types/debug": "~4.1.12",
    "@types/express": "~4.17.21",
    "@types/node": "~20.12.7",
    "depcheck": "~1.4.7",
    "dpdm": "~3.14.0",
    "eslint": "~8.57.0",
    "eslint-config-prettier": "~9.1.0",
    "eslint-plugin-security": "~3.0.0",
    "globals": "~15.0.0",
    "nodemon": "~3.1.0",
    "npm-check-updates": "~16.14.18",
    "pino-pretty": "~11.0.0",
    "prettier": "~3.2.5",
    "swagger-typescript-api": "~13.0.3",
    "ts-node": "~10.9.2",
    "typescript": "~5.4.5",
    "typescript-eslint": "~7.7.0"
  },
  "author": "Adam Akiva",
